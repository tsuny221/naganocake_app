  <div class="row">
    <div class="form">
      <h2 class="form_midashi_txt center bold">ログイン</h2>
      <div class="form_cont">

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, "メールアドレス", class: "form_label" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form_input" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード", class: "form_label" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "form_input" %>
        </div>

        <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "brown_txt bold" %>
        </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン", class: "form_submit white_txt bold" %>
        </div>
        <% end %>

        <%= render "customers/shared/links" %>
      </div>
    </div>
  </div>

