    <div class="row">
      <div class="form">
        <h2 class="form_midashi_txt center bold">新規登録</h2>
        <div class="form_cont">
          <%= form_for(resource, as:resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "customers/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :last_name, "名前", class: "form_label" %><br />
            <%= f.text_field :last_name, autofocus: true, autocomplete:"family-name", class: "form_input_s"%>
            <%= f.text_field :first_name, autofocus: true, autocomplete:"given-name", class: "form_input_s" %>
          </div>

          <div class="field">
            <%= f.label :last_name_kana, "フリガナ", class: "form_label" %><br />
            <%= f.text_field :last_name_kana, autofocus: true, autocomplete:"family-name" , class: "form_input_s"%>
            <%= f.text_field :first_name_kana, autofocus: true, autocomplete:"given-name", class: "form_input_s"%>
          </div>

          <div class="field">
            <%= f.label :postcode, "郵便番号", class: "form_label" %><br />
            <%= f.text_field :postcode, autofocus: true, autocomplete: "post-code", class: "form_input" %>
          </div>

          <div class="field">
            <%= f.label :address, "住所", class: "form_label" %><br />
            <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "form_input" %>
          </div>


          <div class="field">
            <%= f.label :phone_number, "電話番号", class: "form_label" %><br />
            <%= f.text_field :phone_number, autofocus: true, autocomplete: "tel", class: "form_input" %>
          </div>


          <div class="field">
            <%= f.label :email, "メールアドレス", class: "form_label" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form_input" %>
          </div>

          <div class="field">
            <%= f.label :password, "パスワード", class: "form_label" %><br />
            <% if @minimum_password_length %>
            <em class="brown_txt">(<%= @minimum_password_length %> 文字以内)</em>
            <%= f.password_field :password, autocomplete: "new-password", class: "form_input" %>
            <% end %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, "パスワード確認", class: "form_label" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form_input" %>
          </div>

          <div class="actions">
            <%= f.submit "送信", class: "form_submit white_txt bold" %>
          </div>
          <% end %>

          <%= render "customers/shared/links" %>
        </div>
      </div>
    </div>