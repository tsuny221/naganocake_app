<% if obj.errors.any? %>
    <div id="error_explanation" class="error_messages">
      <h3><%= pluralize(obj.errors.count, "") %> 件のエラーが発生したため保存されませんでした。</h3>
      <ul>
      <% obj.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
<% end %>
