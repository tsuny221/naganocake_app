<div class="container">
<div class= "row shipping_address">
   <h2 class="midashi_txt"><i class="fas fa-tags"></i>   配送先一覧</h2>
     <div class="form_cont">
       <%= render 'layouts/errors', obj: @shipping_address %>
        <%= form_for(@shipping_address) do |f| %>
        <div class="field">
          <%= f.label :direction, "宛名", class: "form_label" %>
          <%= f.text_field :direction, class: "form_input" %>
        </div>
        <div class="field">
          <%= f.label :postcode, "郵便番号", class: "form_label" %>
          <%= f.text_field :postcode, autocomplete: "post-code", class: "form_input" %>
        </div>
         <div class="field">
          <%= f.label :address, "住所", class: "form_label" %>
          <%= f.text_field :address, class: "form_input" %>
        </div>

        <div class="category_actions">
             <%= f.submit "登録", class: "form_submit_s white_txt bold" %>
        </div>
         <% end %>
    </div>

    <table class="table txts table-hover table-inverse" >
          <thead class="thead">
                <tr>
                <th class="brown_txt txts">宛名</th>
                <th class="brown_txt txts">郵便番号</th>
                <th class="brown_txt txts">住所</th>
                <th colspan="3"></th>
                </tr>
          </thead>

           <tboby>
             <% @shipping_addresses.each do |shipping_address| %>
             <tr>
             	<td>
             	   <%= shipping_address.direction %>
                </td>
             	<td>
                    <%= shipping_address.postcode %>
             	</td>
             	<td>
                  <%= shipping_address.address %>
             	</td>
             	<td>
             	  <%= link_to "編集", edit_shipping_address_path(shipping_address), class: "edit_btn" %>
             	</td>
             	<td>
             	  <%= link_to "削除", shipping_address_path(shipping_address), method: :delete, "data-confirm" => 'Are you sure?', class: "destroy_btn" %>
             	</td>
             </tr>
              <% end %>
            </tboby>
    </table>
</div>
</div>